          <div class="footer__menu-content" data-accordion="content">
            <ul class="footer__menu-list">
              {
                FooterCooperation.map((item) => (
                  <li class="footer__menu-item">
                    <a href={item.link} class="footer__menu-link">
                      {item.text}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </nav>
      <div class="footer__contacts">
        <div class="footer__contacts-left">
          <div class="footer__contacts-tel">
            <div class="footer__contacts-info">
              <a href="tel:88006007847" class="footer__contacts-number"
                >8 (800) 600-78-47</a
