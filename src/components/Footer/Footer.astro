---
import Container from "@/components/Container/Container.astro";
import {
  FooterDirections,
  FooterAbout,
  FooterProdjects,
  FooterCooperation,
  FooterSubMenu,
} from "@/data/footerMenu.js";
---

<section class="footer">
  <Container>
    <div class="footer__inner">
      <nav
        class="footer__top"
        data-accordion="parent"
        data-destroy="(max-width: 767px)"
      >
        <div
          data-accordion="element"
          class="footer__menu footer__menu--two-column"
        >
          <h2 class="footer__menu-head">Направления</h2>
          <button
            class="footer__menu-btn"
            data-accordion="button"
            type="button"
            aria-label="Раскрыть меню"
          >
            Направления
            <svg
              width="20"
              height="20"
              viewBox="0 0 20 20"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M10 13.5858L2.70711 6.29289C2.31658 5.90237 1.68342 5.90237 1.29289 6.29289C0.902369 6.68342 0.902369 7.31658 1.29289 7.70711L9.15147 15.5657C9.6201 16.0343 10.3799 16.0343 10.8485 15.5657L18.7071 7.70711C19.0976 7.31658 19.0976 6.68342 18.7071 6.29289C18.3166 5.90237 17.6834 5.90237 17.2929 6.29289L10 13.5858Z"
                fill="white"></path>
            </svg>
          </button>
          <div class="footer__menu-content" data-accordion="content">
            <ul class="footer__menu-list">
              {
                FooterDirections.map((item) => (
                  <li class="footer__menu-item">
                    <a href={item.link} class="footer__menu-link">
                      {item.text}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
        <div data-accordion="element" class="footer__menu">
          <h2 class="footer__menu-head">О&nbsp;Skillbox</h2>
          <button
            class="footer__menu-btn"
            data-accordion="button"
            type="button"
            aria-label="Раскрыть меню"
          >
            О&nbsp;Skillbox
            <svg
              width="20"
              height="20"
              viewBox="0 0 20 20"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M10 13.5858L2.70711 6.29289C2.31658 5.90237 1.68342 5.90237 1.29289 6.29289C0.902369 6.68342 0.902369 7.31658 1.29289 7.70711L9.15147 15.5657C9.6201 16.0343 10.3799 16.0343 10.8485 15.5657L18.7071 7.70711C19.0976 7.31658 19.0976 6.68342 18.7071 6.29289C18.3166 5.90237 17.6834 5.90237 17.2929 6.29289L10 13.5858Z"
                fill="white"></path>
            </svg>
          </button>
          <div class="footer__menu-content" data-accordion="content">
            <ul class="footer__menu-list">
              {
                FooterAbout.map((item) => (
                  <li class="footer__menu-item">
                    <a href={item.link} class="footer__menu-link">
                      {item.text}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
        <div data-accordion="element" class="footer__menu">
          <h2 class="footer__menu-head">Проекты</h2>
          <button
            class="footer__menu-btn"
            data-accordion="button"
            type="button"
            aria-label="Раскрыть меню"
          >
            Проекты
            <svg
              width="20"
              height="20"
              viewBox="0 0 20 20"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M10 13.5858L2.70711 6.29289C2.31658 5.90237 1.68342 5.90237 1.29289 6.29289C0.902369 6.68342 0.902369 7.31658 1.29289 7.70711L9.15147 15.5657C9.6201 16.0343 10.3799 16.0343 10.8485 15.5657L18.7071 7.70711C19.0976 7.31658 19.0976 6.68342 18.7071 6.29289C18.3166 5.90237 17.6834 5.90237 17.2929 6.29289L10 13.5858Z"
                fill="white"></path>
            </svg>
          </button>
          <div class="footer__menu-content" data-accordion="content">
            <ul class="footer__menu-list">
              {
                FooterProdjects.map((item) => (
                  <li class="footer__menu-item">
                    <a href={item.link} class="footer__menu-link">
                      {item.text}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
        <div data-accordion="element" class="footer__menu">
          <h2 class="footer__menu-head">Сотрудничество</h2>
          <button
            class="footer__menu-btn"
            data-accordion="button"
            type="button"
            aria-label="Раскрыть меню"
          >
            Сотрудничество
            <svg
              width="20"
              height="20"
              viewBox="0 0 20 20"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M10 13.5858L2.70711 6.29289C2.31658 5.90237 1.68342 5.90237 1.29289 6.29289C0.902369 6.68342 0.902369 7.31658 1.29289 7.70711L9.15147 15.5657C9.6201 16.0343 10.3799 16.0343 10.8485 15.5657L18.7071 7.70711C19.0976 7.31658 19.0976 6.68342 18.7071 6.29289C18.3166 5.90237 17.6834 5.90237 17.2929 6.29289L10 13.5858Z"
                fill="white"></path>
